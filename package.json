{
  "name": "lean-jsx",
  "version": "0.0.21-alpha",
  "author": "Pedro Marquez-Soto",
  "license": "MPL-2.0",
  "description": "LeanJSX is a server-driven library that allows you to build HTML components using JSX-like syntax, but without relying on hefty client-side JavaScript libraries or frameworks.",
  "main": "index.js",
  "type": "module",
  "types": "./lib/types/global.d.ts",
  "files": [
    "lib"
  ],
  "exports": {
    "./server": "./lib/server.cjs",
    "./server/*": {
      "node": "./lib/server/*.cjs",
      "types": "./lib/server/*.d.ts",
      "import": "./lib/server/*.js",
      "require": "./lib/server/*.cjs"
    },
    "./jsx/*": {
      "node": "./lib/jsx/*.cjs",
      "types": "./lib/jsx/*.d.ts",
      "import": "./lib/jsx/*.js",
      "require": "./lib/jsx/*.cjs"
    },
    "./plugins/*": {
      "node": "./lib/plugins/*.cjs",
      "types": "./lib/plugins/*.d.ts",
      "import": "./lib/plugins/*.js",
      "require": "./lib/plugins/*.cjs"
    },
    "./web/sxl.js": "./lib/web/sxl.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "test": "jest",
    "test:e2e": "jest -c ./jest.integration.config.js",
    "docs": "npx typedoc --out docs",
    "semver": "semantic-release",
    "semver-check": "semantic-release --verify-conditions",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@jest/globals": "^29.7.0",
    "@semantic-release/exec": "^6.0.3",
    "@types/compression": "^1.7.4",
    "@types/eslint": "^8.44.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.6",
    "@types/jest-environment-puppeteer": "^5.0.5",
    "@types/jsdom": "^21.1.3",
    "@types/pretty": "^2.0.1",
    "@types/sinon": "^10.0.19",
    "@types/uuid": "^9.0.5",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.23.1",
    "eslint": "^8.53.0",
    "fast-glob": "^3.3.2",
    "husky": "^8.0.3",
    "jest-puppeteer": "^9.0.1",
    "jsdom": "^22.1.0",
    "lean-jsx-types": "^1.0.x",
    "prettier-2": "npm:prettier@^2",
    "pretty": "^2.0.0",
    "semantic-release": "^23.0.5",
    "ts-jest": "^29.1.1",
    "turbo": "^1.12.5",
    "typedoc-plugin-mdn-links": "^3.1.0",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "compression": "^1.7.4",
    "env": "^0.0.2",
    "express": "^4.18.2",
    "htmx.org": "^1.9.8",
    "isomorphic-dompurify": "^2.12.0",
    "jest": "^29.7.0",
    "lean-web-utils": "^1.0.x",
    "lean-jsx-runtime": "~1.0.x",
    "pino": "^8.16.0",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "puppeteer": "^23.1.1",
    "puppeteer-core": "^23.1.1",
    "sinon": "^16.1.0",
    "uuid": "^9.0.1",
    "vite": "^4.4.11"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "echo ${nextRelease.version} > .VERSION"
        }
      ]
    ]
  }
}
