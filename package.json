{
  "name": "lean-jsx",
  "version": "0.0.21-alpha",
  "author": "Pedro Marquez-Soto",
  "license": "MPL-2.0",
  "description": "LeanJSX is a server-driven library that allows you to build HTML components using JSX-like syntax, but without relying on hefty client-side JavaScript libraries or frameworks.",
  "main": "index.js",
  "types": "./lib/types/global.d.ts",
  "files": ["lib"],
  "exports": {
    "./server": "./lib/server.js",
    "./server/*": {
      "import": "./lib/server/*.mjs",
      "require": "./lib/server/*.js",
      "node": "./lib/server/*.js",
      "types": "./lib/server/*.d.ts"
    },
    "./jsx/*": {
      "import": "./lib/jsx/*.mjs",
      "require": "./lib/jsx/*.js",
      "node": "./lib/jsx/*.js",
      "types": "./lib/jsx/*.d.ts"
    },
    "./plugins/*": {
      "import": "./lib/plugins/*.mjs",
      "require": "./lib/plugins/*.js",
      "node": "./lib/plugins/*.js",
      "types": "./lib/plugins/*.d.ts"
    },
    "./web/sxl.js": "./lib/web/sxl.js"
  },
  "scripts": {
    "build": "rm -rf ./lib && rollup -c",
    "watch": "rm -rf ./lib && rollup -c --watch",
    "test": "jest",
    "test:e2e": "jest -c ../../jest.integration.config.js",
    "docs": "npx typedoc --out docs"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.2",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/compression": "^1.7.4",
    "@types/eslint": "^8.44.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.6",
    "@types/jest-environment-puppeteer": "^5.0.5",
    "@types/jsdom": "^21.1.3",
    "@types/pretty": "^2.0.1",
    "@types/sinon": "^10.0.19",
    "@types/uuid": "^9.0.5",
    "eslint": "^8.53.0",
    "fast-glob": "^3.3.2",
    "husky": "^8.0.3",
    "jest-puppeteer": "^9.0.1",
    "jsdom": "^22.1.0",
    "lean-jsx-types": "*",
    "prettier-2": "npm:prettier@^2",
    "pretty": "^2.0.0",
    "rollup": "^4.3.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-visualizer": "^5.9.3",
    "semantic-release": "^23.0.5",
    "ts-jest": "^29.1.1",
    "turbo": "^1.12.5",
    "typedoc-plugin-mdn-links": "^3.1.0",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2",
    "vite-plugin-dts": "^3.6.0"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "compression": "^1.7.4",
    "env": "^0.0.2",
    "express": "^4.18.2",
    "htmx.org": "^1.9.8",
    "jest": "^29.7.0",
    "lean-web-utils": "*",
    "pino": "^8.16.0",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "puppeteer": "^21.3.8",
    "puppeteer-core": "^21.3.8",
    "sinon": "^16.1.0",
    "uuid": "^9.0.1",
    "vite": "^4.4.11"
  },
  "release": {
    "branches": ["main"]
  }
}
